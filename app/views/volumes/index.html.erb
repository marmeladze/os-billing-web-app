<p id="notice"><%= notice %></p>

<h1>Listing Volumes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Type</th>
      <th>Amount</th>
      <th>Available</th>
      <th>Instance</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volumes.each do |volume| %>
      <tr>
        <td><%= volume.volume_type %></td>
        <td><%= volume.amount %></td>
        <td><%= volume.available %></td>
        <td><%= volume.instance %></td>
        <td><%= volume.user %></td>
        <td><%= link_to 'Show', volume %></td>
        <td><%= link_to 'Edit', edit_volume_path(volume) %></td>
        <td><%= link_to 'Destroy', volume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

