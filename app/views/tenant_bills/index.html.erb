<p id="notice"><%= notice %></p>

<h1>Listing Tenant Bills</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Tenant</th>
      <th>Total vcpu</th>
      <th>Total ram</th>
      <th>Total vdisk</th>
      <th>Bill month</th>
      <th>Totoal usage</th>
      <th>Status</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenant_bills.each do |tenant_bill| %>
      <tr>
        <td><%= tenant_bill.tenant_id %></td>
        <td><%= tenant_bill.total_vcpu %></td>
        <td><%= tenant_bill.total_ram %></td>
        <td><%= tenant_bill.total_vdisk %></td>
        <td><%= tenant_bill.bill_month %></td>
        <td><%= tenant_bill.totoal_usage %></td>
        <td><%= tenant_bill.status %></td>
        <td><%= tenant_bill.enabled %></td>
        <td><%= link_to 'Show', tenant_bill %></td>
        <td><%= link_to 'Edit', edit_tenant_bill_path(tenant_bill) %></td>
        <td><%= link_to 'Destroy', tenant_bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

