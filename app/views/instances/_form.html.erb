<%= form_for(@instance) do |f| %>
  <% if @instance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instance.errors.count, "error") %> prohibited this instance from being saved:</h2>

      <ul>
      <% @instance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :flavor %><br>
    <%= f.select :flavor_id, @flavors, prompt: "Choose one" %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.select :image_id, @images, prompt: "Choose one" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
